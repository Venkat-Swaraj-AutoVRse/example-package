{
    "branches": [
        "main",
        {
            "name": "develop",
            "prerelease": true
        },
        {
            "name": "release/*",
            "prerelease": "rc"
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "parserOpts": {
                    "headerPattern": "^\\[(\\w+)\\](?:\\s+\\[(.*?)\\])?\\s+(.*)$",
                    "headerCorrespondence": [
                        "type",
                        "scope",
                        "subject"
                    ]
                },
                "releaseRules": [
                    {
                        "type": "feature",
                        "release": "minor"
                    },
                    {
                        "type": "bugfix",
                        "release": "patch"
                    },
                    {
                        "type": "hotfix",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "parserOpts": {
                    "headerPattern": "^\\[(\\w+)\\](?:\\s+\\[(.*?)\\])?\\s+(.*)$",
                    "headerCorrespondence": [
                        "type",
                        "scope",
                        "subject"
                    ]
                }
            }
        ],
        "@semantic-release/changelog",
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "node scripts/prepare-package.js"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": true,
                "pkgRoot": "dist"
            }
        ],
        "@semantic-release/github",
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "CHANGELOG.md"
                ],
                "message": "[chore] [release] ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}